@page "{id:int}"
@model MUnder.Pages.Songs.DeleteModel
@{
    ViewData["Title"] = "Eliminar Canción";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #1E1B26;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 40px auto;
            padding: 0 20px;
        }

        h2 {
            color: #DC143C;
            margin-bottom: 20px;
        }

        .song-info {
            background-color: #2D2838;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .title {
            color: #9370DB;
            margin: 0 0 10px 0;
        }

        .btn-group {
            margin-top: 20px;
        }

        .btn-delete {
            background-color: #DC143C;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            font-size: 1em;
        }

        .btn-cancel {
            background-color: #555;
            color: white;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 8px;
            font-weight: bold;
            margin-left: 10px;
            display: inline-block;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>¿Eliminar esta canción?</h2>

        <div class="song-info">
            <h3 class="title">@Model.Song.Title</h3>
            <p>@Model.Song.Artist</p>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Song.Id" />
            <div class="btn-group">
                <button type="submit" class="btn-delete">Sí, eliminar</button>
                <a asp-page="Index" class="btn-cancel">Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>
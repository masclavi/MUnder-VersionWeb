@page "{id:int}"
@model MUnder.Pages.Songs.DetailsModel
@{
    ViewData["Title"] = $"Canción: {Model.Song.Title}";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #1E1B26;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin: 40px auto;
            padding: 0 20px;
        }

        h2 {
            color: #9370DB;
            margin-bottom: 20px;
        }

        .btn-back {
            background-color: #555;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            display: inline-block;
            margin-bottom: 20px;
            transition: all 0.3s;
        }

        .btn-back:hover {
            background-color: #666;
            transform: translateY(-2px);
        }

        .song-detail {
            background-color: #2D2838;
            padding: 25px;
            border-radius: 10px;
            text-align: center;
            margin-bottom: 30px;
        }

        .cover {
            width: 200px;
            height: 200px;
            border-radius: 10px;
            margin-bottom: 20px;
            object-fit: cover;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .title {
            color: #9370DB;
            font-size: 2em;
            margin: 0 0 10px 0;
        }

        .artist {
            font-size: 1.3em;
            opacity: 0.9;
            margin-bottom: 20px;
        }

        .btn-play-popup {
            background-color: #9370DB;
            color: white;
            padding: 15px 40px;
            border: none;
            border-radius: 10px;
            font-size: 1.2em;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s;
            text-decoration: none;
        }

        .btn-play-popup:hover {
            background-color: #7B4FBB;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(147, 112, 219, 0.5);
        }

        /* === ESTILOS PARA RESEÑAS === */
        .reviews-section {
            background-color: #2D2838;
            padding: 25px;
            border-radius: 10px;
            margin-top: 20px;
        }

        .reviews-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #444;
        }

        .average-rating {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-top: 10px;
        }

        .average-number {
            font-size: 2em;
            font-weight: bold;
            color: #FFD700;
        }

        .stars-display {
            display: inline-block;
            font-size: 1.5em;
        }

        .star-filled {
            color: #FFD700;
        }

        .star-empty {
            color: #555;
        }

        .review-item {
            background-color: #1E1B26;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 15px;
            border-left: 3px solid #9370DB;
        }

        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .review-user {
            font-weight: bold;
            color: #9370DB;
        }

        .review-date {
            font-size: 0.9em;
            opacity: 0.7;
        }

        .review-rating {
            color: #FFD700;
            font-size: 1.1em;
            margin-bottom: 10px;
        }

        .review-comment {
            line-height: 1.6;
            opacity: 0.9;
        }

        .no-reviews {
            text-align: center;
            padding: 40px;
            opacity: 0.6;
        }

        .review-count {
            font-size: 0.9em;
            opacity: 0.7;
            margin-left: 5px;
        }

        .my-review-badge {
            background-color: #9370DB;
            color: white;
            padding: 3px 10px;
            border-radius: 5px;
            font-size: 0.8em;
            margin-left: 10px;
        }

        @@media (max-width: 768px) {
            .reviews-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }

            .cover {
                width: 150px;
                height: 150px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/Songs" class="btn-back">← Volver a Explorar</a>

        <!-- Detalles de la canción -->
        <div class="song-detail">
            <img src="@Model.Song.CoverPath" class="cover" onerror="this.src='/Imagenes/default-cover.png'" />
            <h2 class="title">@Model.Song.Title</h2>
            <p class="artist">@Model.Song.Artist</p>

            <button class="btn-play-popup" onclick="openYouTubePopup()">
                <span>▶️</span>
                <span>Reproducir en YouTube</span>
            </button>
        </div>

        <!-- Sistema de Valoraciones (solo para usuarios autenticados) -->
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div id="rating-container-@Model.Song.Id"></div>
        }
        else
        {
            <div style="background-color: #2D2838; padding: 20px; border-radius: 10px; text-align: center; margin-bottom: 20px;">
                <p style="opacity: 0.7;">Inicia sesión para valorar esta canción</p>
            </div>
        }

        <!-- Sección de Reseñas -->
        <div class="reviews-section">
            <div class="reviews-header">
                <div style="width: 100%;">
                    <h2 style="margin: 0;">
                        💬 Reseñas
                        <span class="review-count">(@Model.Reviews.Count)</span>
                    </h2>
                    @if (Model.Reviews.Any())
                    {
                        <div class="average-rating">
                            <span class="average-number">@Model.AverageRating.ToString("0.0")</span>
                            <div class="stars-display">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Round(Model.AverageRating))
                                    {
                                        <span class="star-filled">★</span>
                                    }
                                    else
                                    {
                                        <span class="star-empty">☆</span>
                                    }
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Lista de Reseñas -->
            @if (Model.Reviews.Any())
            {
                @foreach (var review in Model.Reviews)
                {
                    <div class="review-item">
                        <div class="review-header">
                            <span class="review-user">
                                👤 @review.User.DisplayName
                                @if (review.UserId == Model.CurrentUserId)
                                {
                                    <span class="my-review-badge">Tu reseña</span>
                                }
                            </span>
                            <span class="review-date">
                                @review.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </span>
                        </div>
                        <div class="review-rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= review.Rating)
                                {
                                    <span>★</span>
                                }
                                else
                                {
                                    <span style="color: #555;">☆</span>
                                }
                            }
                        </div>
                        <p class="review-comment">@review.Comment</p>
                    </div>
                }
            }
            else
            {
                <div class="no-reviews">
                    <div style="font-size: 3em; opacity: 0.3;">💬</div>
                    <p>No hay reseñas aún. ¡Sé el primero en compartir tu opinión!</p>
                </div>
            }
        </div>
    </div>

    <script src="~/js/site.js"></script>
    <script>
        // Variables globales
        const youtubeUrl = '@Model.Song.YouTubeUrl';
        const songId = @Model.Song.Id;

        // Función para abrir popup de YouTube REAL (ventana emergente)
        function openYouTubePopup() {
            const embedUrl = getEmbedUrl(youtubeUrl);
            
            // Características de la ventana emergente
            const width = 900;
            const height = 550;
            const left = (screen.width - width) / 2;
            const top = (screen.height - height) / 2;
            
            const windowFeatures = 'width=' + width + ',height=' + height + ',left=' + left + ',top=' + top + ',menubar=no,toolbar=no,location=no,status=no,resizable=yes,scrollbars=no';
            
            // Abrir ventana emergente con HTML personalizado
            const popup = window.open('', 'YouTubePlayer', windowFeatures);
            
            if (popup) {
                popup.document.write('<!DOCTYPE html><html><head><title>@Model.Song.Title - @Model.Song.Artist</title><style>body{margin:0;padding:0;background-color:#000;overflow:hidden}iframe{position:absolute;top:0;left:0;width:100%;height:100%;border:none}</style></head><body><iframe src="' + embedUrl + '?autoplay=1" allowfullscreen></iframe></body></html>');
                popup.document.close();
                popup.focus();
            } else {
                alert('Por favor, permite las ventanas emergentes para reproducir el video.');
            }
        }

        // Función para convertir URL de YouTube a embed
        function getEmbedUrl(url) {
            if (!url) return '';
            
            let videoId = '';
            
            if (url.includes('youtu.be/')) {
                videoId = url.split('/').pop().split('?')[0];
            } else if (url.includes('youtube.com/watch')) {
                const urlParams = new URLSearchParams(new URL(url).search);
                videoId = urlParams.get('v');
            }
            
            return 'https://www.youtube.com/embed/' + videoId;
        }

        // Inicializar sistema de valoraciones (solo si está autenticado)
        @if (User.Identity?.IsAuthenticated == true)
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                createRatingSystem(songId, 'rating-container-' + songId);
            });
            </text>
        }
    </script>
</body>
</html>
@page "{id:int}"
@model MUnder.Pages.Songs.DetailsModel
@{
    ViewData["Title"] = $"Canción: {Model.Song.Title}";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #1E1B26;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin: 40px auto;
            padding: 0 20px;
        }

        h2 {
            color: #9370DB;
            margin-bottom: 20px;
        }

        .btn-back {
            background-color: #555;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            display: inline-block;
            margin-bottom: 20px;
            transition: all 0.3s;
        }

            .btn-back:hover {
                background-color: #666;
                transform: translateY(-2px);
            }

        .song-detail {
            background-color: #2D2838;
            padding: 25px;
            border-radius: 10px;
            text-align: center;
            margin-bottom: 30px;
        }

        .cover {
            width: 200px;
            height: 200px;
            border-radius: 10px;
            margin-bottom: 20px;
            object-fit: cover;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .title {
            color: #9370DB;
            font-size: 2em;
            margin: 0 0 10px 0;
        }

        .artist {
            font-size: 1.3em;
            opacity: 0.9;
            margin-bottom: 20px;
        }

        .btn-play-popup {
            background-color: #9370DB;
            color: white;
            padding: 15px 40px;
            border: none;
            border-radius: 10px;
            font-size: 1.2em;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s;
            text-decoration: none;
        }

            .btn-play-popup:hover {
                background-color: #7B4FBB;
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(147, 112, 219, 0.5);
            }

        /* Modal de YouTube Popup */
        .youtube-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.9);
            z-index: 9999;
            justify-content: center;
            align-items: center;
            animation: fadeIn 0.3s ease;
        }

            .youtube-modal.show {
                display: flex;
            }

        .youtube-modal-content {
            position: relative;
            width: 90%;
            max-width: 900px;
            background-color: #000;
            border-radius: 10px;
            overflow: hidden;
            animation: slideDown 0.3s ease;
        }

        .youtube-close {
            position: absolute;
            top: -40px;
            right: 0;
            background-color: #DC143C;
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            font-size: 1.5em;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s;
            z-index: 10000;
        }

            .youtube-close:hover {
                background-color: #FF0000;
                transform: scale(1.1);
            }

        .youtube-iframe {
            width: 100%;
            height: 500px;
            border: none;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes slideDown {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        /* === ESTILOS PARA RESEÑAS === */
        .reviews-section {
            background-color: #2D2838;
            padding: 25px;
            border-radius: 10px;
            margin-top: 20px;
        }

        .reviews-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #444;
        }

        .average-rating {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-top: 10px;
        }

        .average-number {
            font-size: 2em;
            font-weight: bold;
            color: #FFD700;
        }

        .stars-display {
            display: inline-block;
            font-size: 1.5em;
        }

        .star-filled {
            color: #FFD700;
        }

        .star-empty {
            color: #555;
        }

        .review-item {
            background-color: #1E1B26;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 15px;
            border-left: 3px solid #9370DB;
        }

        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .review-user {
            font-weight: bold;
            color: #9370DB;
        }

        .review-date {
            font-size: 0.9em;
            opacity: 0.7;
        }

        .review-rating {
            color: #FFD700;
            font-size: 1.1em;
            margin-bottom: 10px;
        }

        .review-comment {
            line-height: 1.6;
            opacity: 0.9;
        }

        .no-reviews {
            text-align: center;
            padding: 40px;
            opacity: 0.6;
        }

        .review-count {
            font-size: 0.9em;
            opacity: 0.7;
            margin-left: 5px;
        }

        .my-review-badge {
            background-color: #9370DB;
            color: white;
            padding: 3px 10px;
            border-radius: 5px;
            font-size: 0.8em;
            margin-left: 10px;
        }

        @@media (max-width: 768px) {
            .youtube-iframe {
                height: 300px;
            }

            .youtube-modal-content {
                width: 95%;
            }

            .reviews-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/Songs" class="btn-back">← Volver a Explorar</a>

        <!-- Detalles de la canción -->
        <div class="song-detail">
            <img src="@Model.Song.CoverPath" class="cover" onerror="this.src='/Imagenes/default-cover.png'" />
            <h2 class="title">@Model.Song.Title</h2>
            <p class="artist">@Model.Song.Artist</p>

            <button class="btn-play-popup" onclick="openYouTubePopup()">
                <span>▶️</span>
                <span>Reproducir en YouTube</span>
            </button>
        </div>

        <!-- Sistema de Valoraciones (solo para usuarios autenticados) -->
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div id="rating-container-@Model.Song.Id"></div>
        }
        else
        {
            <div style="background-color: #2D2838; padding: 20px; border-radius: 10px; text-align: center; margin-bottom: 20px;">
                <p style="opacity: 0.7;">Inicia sesión para valorar esta canción</p>
            </div>
        }

        <!-- Sección de Reseñas -->
        <div class="reviews-section">
            <div class="reviews-header">
                <div style="width: 100%;">
                    <h2 style="margin: 0;">
                        💬 Reseñas
                        <span class="review-count">(@Model.Reviews.Count)</span>
                    </h2>
                    @if (Model.Reviews.Any())
                    {
                        <div class="average-rating">
                            <span class="average-number">@Model.AverageRating.ToString("0.0")</span>
                            <div class="stars-display">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Round(Model.AverageRating))
                                    {
                                        <span class="star-filled">★</span>
                                    }
                                    else
                                    {
                                        <span class="star-empty">☆</span>
                                    }
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Lista de Reseñas -->
            @if (Model.Reviews.Any())
            {
                @foreach (var review in Model.Reviews)
                {
                    <div class="review-item">
                        <div class="review-header">
                            <span class="review-user">
                                👤 @review.User.DisplayName
                                @if (review.UserId == Model.CurrentUserId)
                                {
                                    <span class="my-review-badge">Tu reseña</span>
                                }
                            </span>
                            <span class="review-date">
                                @review.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </span>
                        </div>
                        <div class="review-rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= review.Rating)
                                {
                                    <span>★</span>
                                }
                                else
                                {
                                    <span style="color: #555;">☆</span>
                                }
                            }
                        </div>
                        <p class="review-comment">@review.Comment</p>
                    </div>
                }
            }
            else
            {
                <div class="no-reviews">
                    <div style="font-size: 3em; opacity: 0.3;">💬</div>
                    <p>No hay reseñas aún. ¡Sé el primero en compartir tu opinión!</p>
                </div>
            }
        </div>
    </div>

    <!-- Modal de YouTube -->
    <div id="youtube-modal" class="youtube-modal">
        <div class="youtube-modal-content">
            <button class="youtube-close" onclick="closeYouTubePopup()">×</button>
            <iframe id="youtube-iframe" class="youtube-iframe" src="" allowfullscreen></iframe>
        </div>
    </div>

    <script src="~/js/site.js"></script>
    <script>
        // Variables globales
        const youtubeUrl = '@Model.Song.YouTubeUrl';
        const songId = @Model.Song.Id;

        // Función para abrir popup de YouTube
        function openYouTubePopup() {
            const modal = document.getElementById('youtube-modal');
            const iframe = document.getElementById('youtube-iframe');
            const embedUrl = getEmbedUrl(youtubeUrl);

            iframe.src = embedUrl + '?autoplay=1';
            modal.classList.add('show');

            // Prevenir scroll del body
            document.body.style.overflow = 'hidden';
        }

        // Función para cerrar popup de YouTube
        function closeYouTubePopup() {
            const modal = document.getElementById('youtube-modal');
            const iframe = document.getElementById('youtube-iframe');

            iframe.src = '';
            modal.classList.remove('show');

            // Restaurar scroll del body
            document.body.style.overflow = 'auto';
        }

        // Cerrar con tecla ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeYouTubePopup();
            }
        });

        // Cerrar al hacer clic fuera del video
        document.getElementById('youtube-modal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeYouTubePopup();
            }
        });

        // Función para convertir URL de YouTube a embed
        function getEmbedUrl(url) {
            if (!url) return '';

            let videoId = '';

            if (url.includes('youtu.be/')) {
                videoId = url.split('/').pop().split('?')[0];
            } else if (url.includes('youtube.com/watch')) {
                const urlParams = new URLSearchParams(new URL(url).search);
                videoId = urlParams.get('v');
            }

            return 'https://www.youtube.com/embed/' + videoId;
        }

        // Inicializar sistema de valoraciones (solo si está autenticado)
        @if (User.Identity?.IsAuthenticated == true)
        {
                <text>
                document.addEventListener('DOMContentLoaded', function() {
                    createRatingSystem(songId, 'rating-container-' + songId);
                });
                </text>
        }
    </script>
</body>
</html>
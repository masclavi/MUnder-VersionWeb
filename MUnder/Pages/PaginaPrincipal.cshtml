@page
@model MUnder.Pages.PaginaPrincipalModel
@{
    ViewData["Title"] = "MUnder - Inicio";
}

<!-- Estilos mínimos para el dropdown (puedes moverlos luego a site.css si querés) -->
<style>
    .navbar-custom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 24px;
        background: #2D2838;
        color: white;
        border-radius: 4px;
        margin-bottom: 18px;
    }

    .navbar-brand {
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .navbar-brand img {
            width: 46px;
            height: 46px;
            border-radius: 6px;
            object-fit: cover;
        }

    .user-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    /* Dropdown */
    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropbtn {
        background-color: transparent;
        color: white;
        border: 2px solid #9370DB;
        padding: 8px 14px;
        border-radius: 20px;
        cursor: pointer;
        font-weight: 600;
    }

        .dropbtn:hover {
            background-color: rgba(147,112,219,0.08);
        }

    .dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        top: calc(100% + 8px);
        background-color: #2D2838;
        min-width: 200px;
        border-radius: 8px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.4);
        z-index: 1000;
        overflow: hidden;
    }

        .dropdown-content a,
        .dropdown-content button {
            display: block;
            padding: 10px 14px;
            text-decoration: none;
            color: white;
            background: none;
            border: none;
            width: 100%;
            text-align: left;
            cursor: pointer;
            font-size: 0.95rem;
        }

            .dropdown-content a:hover,
            .dropdown-content button:hover {
                background-color: rgba(147,112,219,0.12);
            }

    .show {
        display: block;
    }

    /* logout button */
    .btn-logout {
        background-color: #DC143C;
        color: white;
        padding: 8px 12px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
    }

        .btn-logout:hover {
            opacity: 0.95;
        }
</style>

<!-- NAV -->
<div class="navbar-custom">
    <div class="navbar-brand">
        <img src="~/Imagenes/logo.png" alt="MUnder Logo" onerror="this.style.display='none'" />
        <h1 style="color:#9370DB; margin:0; font-size:1.1rem;">MUnder</h1>
    </div>

    <div class="user-info">
        <!-- Dropdown sobre el nombre -->
        <div class="dropdown" id="userDropdownContainer">
            <button type="button" class="dropbtn" id="userDropbtn">
                @Model.UserName &#x25BE;
            </button>

            <div class="dropdown-content" id="userDropdown" aria-hidden="true">
                <!-- Usa tus Razor Pages ya creadas -->
                <a asp-page="/EditProfile/Index">Ver perfil</a>
                <a asp-page="/EditProfile/Index">Editar perfil</a>
                <a asp-page="/EditProfile/ChangePassword">Cambiar contraseña</a>
            </div>
        </div>

        <!-- Logout: invoca OnPostLogoutAsync en el PageModel -->
        <form method="post" asp-page-handler="Logout" style="margin:0;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn-logout">Cerrar Sesión</button>
        </form>
    </div>
</div>

<!-- CONTENIDO -->
<div class="container">
    <div style="background:linear-gradient(135deg,#4B0082 0%,#9370DB 100%); padding:36px; border-radius:10px; color:white; margin-bottom:18px;">
        <h2 style="margin:0 0 6px 0;">¡Bienvenido a MUnder!</h2>
        <p style="margin:0; opacity:0.95;">Tu plataforma de música favorita</p>
    </div>

    <div style="display:grid; gap:18px; grid-template-columns:repeat(auto-fit,minmax(240px,1fr));">
        <a asp-page="/Playlists/Index" style="text-decoration:none;">
            <div style="background:#2D2838; padding:18px; border-radius:8px;">
                <h3 style="color:#9370DB; margin:0 0 8px 0;">🎵 Mis Playlists</h3>
                <p style="margin:0; opacity:0.9;">Crea y administra tus playlists</p>
            </div>
        </a>

        <a asp-page="/Songs/Index" style="text-decoration:none;">
            <div style="background:#2D2838; padding:18px; border-radius:8px;">
                <h3 style="color:#9370DB; margin:0 0 8px 0;">🎧 Explorar Música</h3>
                <p style="margin:0; opacity:0.9;">Descubre nueva música</p>
            </div>
        </a>

        <a asp-page="/Favorites/Index" style="text-decoration:none;">
            <div style="background:#2D2838; padding:18px; border-radius:8px;">
                <h3 style="color:#9370DB; margin:0 0 8px 0;">❤️ Favoritos</h3>
                <p style="margin:0; opacity:0.9;">Guarda tus canciones favoritas</p>
            </div>
        </a>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const btn = document.getElementById('userDropbtn');
            const dropdown = document.getElementById('userDropdown');
            const container = document.getElementById('userDropdownContainer');

            if (!btn || !dropdown || !container) return;

            // Toggle al click en el botón
            btn.addEventListener('click', function (e) {
                e.stopPropagation();
                dropdown.classList.toggle('show');
                const visible = dropdown.classList.contains('show');
                dropdown.setAttribute('aria-hidden', !visible);
            });

            // Cerrar al click fuera
            document.addEventListener('click', function (e) {
                if (!container.contains(e.target)) {
                    dropdown.classList.remove('show');
                    dropdown.setAttribute('aria-hidden', 'true');
                }
            });

            // Cerrar con ESC
            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape') {
                    dropdown.classList.remove('show');
                    dropdown.setAttribute('aria-hidden', 'true');
                }
            });
        })();
    </script>
}
@page "{songId:int}"
@model MUnder.Pages.Reviews.CreateModel
@{
    ViewData["Title"] = "Agregar Reseña";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background-color: #1E1B26;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 700px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .card {
        background-color: #2D2838;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
        border: none;
    }

    .card-header {
        background: linear-gradient(135deg, #4B0082, #9370DB);
        padding: 16px 20px;
        margin: -30px -30px 24px -30px;
        border-radius: 12px 12px 0 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .card-header h3 {
            margin: 0;
            font-size: 1.5rem;
        }

    .alert {
        background-color: rgba(147, 112, 219, 0.15);
        border: 1px solid #9370DB;
        color: white;
        border-radius: 8px;
        padding: 14px;
        margin-bottom: 24px;
    }

        .alert h5 {
            margin: 0 0 6px 0;
            color: #E0D6F0;
        }

        .alert p {
            margin: 0;
            opacity: 0.9;
        }

    .form-label {
        font-weight: 600;
        margin-bottom: 10px;
        display: block;
        color: #E0D6F0;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border-radius: 8px;
        border: 1px solid #4A4357;
        background-color: #231F2E;
        color: white;
        font-size: 1rem;
        resize: vertical;
    }

        .form-control:focus {
            outline: none;
            border-color: #9370DB;
            box-shadow: 0 0 0 3px rgba(147, 112, 219, 0.25);
        }

    .text-danger {
        color: #FF6B6B;
        font-size: 0.9rem;
    }

    .validation-summary-errors {
        color: #FF6B6B;
        background-color: rgba(220, 20, 60, 0.1);
        border: 1px solid #DC143C;
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 20px;
    }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 20px;
        }

        .validation-summary-errors li {
            margin-bottom: 4px;
        }

    /* --- Estrellitas --- */
    .star-rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-start;
        gap: 8px;
        font-size: 2.2rem;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            color: #5A526B; /* gris apagado */
            cursor: pointer;
            transition: color 0.25s, transform 0.15s;
        }

            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: #FFD700; /* amarillo dorado para hover */
                transform: scale(1.1);
            }

        .star-rating input:checked + label,
        .star-rating input:checked ~ label {
            color: #FFD700;
        }

    /* --- Botones --- */
    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        transition: opacity 0.2s, transform 0.15s;
    }

    .btn-primary {
        background-color: #9370DB;
        border: none;
        color: white;
        min-width: 180px;
    }

        .btn-primary:hover {
            background-color: #7A5BB8;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: transparent;
        border: 2px solid #6C757D;
        color: #ADB5BD;
        min-width: 140px;
    }

        .btn-secondary:hover {
            background-color: rgba(108, 117, 125, 0.1);
            color: white;
        }

    .button-group {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            <i class="bi bi-star-fill"></i>
            <h3 class="mb-0">Calificar y Reseñar</h3>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.ReviewViewModel.SongTitle))
            {
                <div class="alert">
                    <h5><strong>@Model.ReviewViewModel.SongTitle</strong></h5>
                    <p class="mb-0">Por: @Model.ReviewViewModel.SongArtist</p>
                </div>
            }

            <form method="post">
                <input type="hidden" asp-for="ReviewViewModel.SongId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Calificación con estrellas -->
                <div class="mb-4">
                    <label asp-for="ReviewViewModel.Rating" class="form-label">Tu calificación</label>
                    <div class="star-rating">
                        @for (int i = 5; i >= 1; i--)
                        {
                            var starId = $"star{i}";
                            <input type="radio" id="@starId" name="ReviewViewModel.Rating" value="@i"
                                   checked="@(Model.ReviewViewModel.Rating == i)" />
                            <label for="@starId" title="@i estrellas">
                                <i class="bi bi-star-fill"></i>
                            </label>
                        }
                    </div>
                    <span asp-validation-for="ReviewViewModel.Rating" class="text-danger"></span>
                </div>

                <!-- Reseña -->
                <div class="mb-4">
                    <label asp-for="ReviewViewModel.Comment" class="form-label">Tu reseña</label>
                    <textarea asp-for="ReviewViewModel.Comment" class="form-control" rows="5"
                              placeholder="Escribe tu opinión sobre esta canción..."></textarea>
                    <span asp-validation-for="ReviewViewModel.Comment" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="button-group">
                    <a asp-page="/Songs/Details" asp-route-id="@Model.ReviewViewModel.SongId"
                       class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Publicar Reseña
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
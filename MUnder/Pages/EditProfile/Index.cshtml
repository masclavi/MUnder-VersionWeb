@page
@model MUnder.Pages.EditProfile.IndexModel
@{
    ViewData["Title"] = "Editar Perfil";
}

<style>
    body {
        background-color: #1E1B26;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .card {
        background-color: #2D2838;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
        border: none;
    }

    .card-header {
        background: linear-gradient(135deg, #4B0082, #9370DB);
        padding: 16px 20px;
        margin: -30px -30px 24px -30px;
        border-radius: 12px 12px 0 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .card-header h4 {
            margin: 0;
            font-size: 1.4rem;
        }

    .form-label {
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        color: #E0D6F0;
    }

    .form-control {
        width: 100%;
        padding: 10px 14px;
        border-radius: 8px;
        border: 1px solid #4A4357;
        background-color: #231F2E;
        color: white;
        font-size: 1rem;
        margin-bottom: 6px;
    }

        .form-control:focus {
            outline: none;
            border-color: #9370DB;
            box-shadow: 0 0 0 3px rgba(147, 112, 219, 0.25);
        }

    .text-danger {
        color: #FF6B6B;
        font-size: 0.9rem;
    }

    .alert {
        background-color: rgba(147, 112, 219, 0.2);
        border: 1px solid #9370DB;
        color: white;
        border-radius: 8px;
        padding: 12px 16px;
        margin-bottom: 20px;
    }

        .alert .btn-close {
            filter: invert(1);
        }

    .btn {
        padding: 10px 16px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: opacity 0.2s, transform 0.2s;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-primary {
        background-color: #9370DB;
        border: none;
        color: white;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #7A5BB8;
            opacity: 0.95;
        }

    .btn-outline-warning {
        background-color: transparent;
        border: 2px solid #FFA500;
        color: #FFA500;
        width: 100%;
    }

        .btn-outline-warning:hover {
            background-color: rgba(255, 165, 0, 0.1);
        }

    .btn-outline-secondary {
        background-color: transparent;
        border: 2px solid #6C757D;
        color: #ADB5BD;
        width: 100%;
    }

        .btn-outline-secondary:hover {
            background-color: rgba(108, 117, 125, 0.1);
            color: white;
        }

    .validation-summary-errors {
        color: #FF6B6B;
        background-color: rgba(220, 20, 60, 0.1);
        border: 1px solid #DC143C;
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 20px;
    }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 20px;
        }

        .validation-summary-errors li {
            margin-bottom: 4px;
        }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            <i class="bi bi-person-circle"></i>
            <h4 class="mb-0">Editar Perfil</h4>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @Model.StatusMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Input.DisplayName" class="form-label">Nombre público</label>
                    <input asp-for="Input.DisplayName" class="form-control" />
                    <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                    <input asp-for="Input.Email" class="form-control" type="email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.PhoneNumber" class="form-label">Número de teléfono</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" type="tel" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="d-grid gap-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-page="/PaginaPrincipal" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
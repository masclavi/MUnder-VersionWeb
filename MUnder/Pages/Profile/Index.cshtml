@page
@model MUnder.Pages.EditProfile.IndexModel
@{
    ViewData["Title"] = "Ver Perfil";
}

<style>
    body {
        background-color: #1E1B26;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .card {
        background-color: #2D2838;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
        border: none;
    }

    .card-header {
        background: linear-gradient(135deg, #4B0082, #9370DB);
        padding: 16px 20px;
        margin: -30px -30px 24px -30px;
        border-radius: 12px 12px 0 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .card-header h4 {
            margin: 0;
            font-size: 1.4rem;
        }

    .form-label {
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        color: #E0D6F0;
    }

    .form-static {
        padding: 10px 14px;
        border-radius: 8px;
        background-color: #231F2E;
        color: white;
        font-size: 1rem;
        margin-bottom: 16px;
        border: 1px solid #4A4357;
        word-break: break-word;
    }

    .alert {
        background-color: rgba(147, 112, 219, 0.2);
        border: 1px solid #9370DB;
        color: white;
        border-radius: 8px;
        padding: 12px 16px;
        margin-bottom: 20px;
    }

    .btn {
        padding: 10px 16px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: opacity 0.2s, transform 0.2s;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-outline-secondary {
        background-color: transparent;
        border: 2px solid #6C757D;
        color: #ADB5BD;
        width: 100%;
    }

        .btn-outline-secondary:hover {
            background-color: rgba(108, 117, 125, 0.1);
            color: white;
        }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            <i class="bi bi-person-circle"></i>
            <h4 class="mb-0">Ver Perfil</h4>  
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @Model.StatusMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

             <div class="mb-3">
                <label class="form-label">Nombre público</label>
                <div class="form-static">@Model.Input.DisplayName</div>
            </div>

            <div class="mb-3">
                <label class="form-label">Correo electrónico</label>
                <div class="form-static">@Model.Input.Email</div>
            </div>

            <div class="mb-3">
                <label class="form-label">Número de teléfono</label>
                <div class="form-static">@Model.Input.PhoneNumber</div>
            </div>

            <div class="d-grid">
                <a asp-page="/PaginaPrincipal" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>

